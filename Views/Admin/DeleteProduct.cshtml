@model ClothingStore.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Xóa sản phẩm</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Bạn có chắc chắn muốn xóa sản phẩm này?</h5>
        <p>Tên: @Model.Name</p>
        <p>Giá: @Model.Price.ToString("N0") VNĐ</p>
        <form asp-action="DeleteProductConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a href="@Url.Action("ProductStats")" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>