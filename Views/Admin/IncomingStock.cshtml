@model List<(string ProductName, int Quantity)>

@{
    ViewData["Title"] = "Hàng sắp nhập";
}

<div class="container my-5 admin-dashboard">
    <h2 class="text-center mb-4" style="color: var(--primary-color);">Hàng sắp nhập</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>