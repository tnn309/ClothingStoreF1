@{
    ViewData["Title"] = "Thống kê sản phẩm";
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box"></i> Thống kê sản phẩm</h2>
        <a href="@Url.Action("Overview")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại Dashboard
        </a>
    </div>

    <!-- Thống kê theo loại sản phẩm -->
    <div class="row mb-4">
        @foreach (var category in ViewBag.CategoryStats)
        {
            <div class="col-md-3 mb-3">
                <a href="@Url.Action("CategoryProducts", "Admin", new { categoryName = category.Category })" style="text-decoration: none;">
                    <div class="card border-primary">
                        <div class="card-header bg-primary text-white text-center">
                            <h5 class="mb-0">@category.Category</h5>
                        </div>
                        <div class="card-body text-center">
                            <h3 class="text-primary">@category.Count</h3>
                            <p class="text-muted">sản phẩm</p>
                            <hr>
                            <p>
                                <strong>Tổng giá trị:</strong><br>
                                <span class="text-success">@(((decimal)category.TotalValue).ToString("N0"))₫</span>
                            </p>
                            <p>
                                <strong>Giá trung bình:</strong><br>
                                <span class="text-info">@(((decimal)category.AveragePrice).ToString("N0"))₫</span>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
        <!-- Ô dấu cộng để thêm danh mục mới -->
        <div class="col-md-3 mb-3">
            <div class="card border-success" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                <div class="card-header bg-success text-white text-center">
                    <h5 class="mb-0">Thêm Danh Mục</h5>
                </div>
                <div class="card-body text-center">
                    <h3 class="text-success"><i class="fas fa-plus"></i></h3>
                    <p class="text-muted">Thêm danh mục mới</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Biểu đồ phân bố theo loại -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Phân bố sản phẩm theo loại</h5>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" width="400" height="300"></canvas>
                </div>
            </div>
        </div>

        <!-- Sản phẩm bán chạy -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Top sản phẩm bán chạy</h5>
                    <a href="@Url.Action("AddProduct")" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Thêm sản phẩm
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.BestSellingProducts != null && ((List<object>)ViewBag.BestSellingProducts).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Loại</th>
                                        <th>Đã bán</th>
                                        <th>Doanh thu</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (dynamic product in (List<object>)ViewBag.BestSellingProducts)
                                    {
                                        <tr>
                                            <td><strong>@product.ProductName</strong></td>
                                            <td><span class="badge bg-secondary">@product.Category</span></td>
                                            <td><span class="badge bg-info">@product.TotalSold</span></td>
                                            <td><span class="text-success">@(((decimal)product.TotalRevenue).ToString("N0"))₫</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-chart-line fa-2x text-muted mb-2"></i>
                            <p class="text-muted">Chưa có dữ liệu bán hàng</p>
                            <small class="text-muted">Sản phẩm sẽ xuất hiện ở đây khi có đơn hàng</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Chi tiết sản phẩm theo loại -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Chi tiết sản phẩm theo loại</h5>
                </div>
                <div class="card-body">
                    <div class="accordion" id="categoryAccordion">
                        @{
                            int index = 0;
                        }
                        @foreach (var category in ViewBag.CategoryStats)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading@(index)">
                                    <button class="accordion-button @(index == 0 ? "" : "collapsed")" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#collapse@(index)"
                                            aria-expanded="@(index == 0 ? "true" : "false")" aria-controls="collapse@(index)">
                                        <strong>@category.Category</strong>
                                        <span class="badge bg-primary ms-2">@category.Count sản phẩm</span>
                                    </button>
                                </h2>
                                <div id="collapse@(index)" class="accordion-collapse collapse @(index == 0 ? "show" : "")"
                                     aria-labelledby="heading@(index)" data-bs-parent="#categoryAccordion">
                                    <div class="accordion-body">
                                        <div class="row">
                                            @foreach (var product in category.Products)
                                            {
                                                <div class="col-md-4 mb-3">
                                                    <div class="card border-light">
                                                        <div class="card-body">
                                                            <h6 class="card-title">@product.Name</h6>
                                                            <p class="card-text text-muted small">@product.Description</p>
                                                            <p class="card-text">
                                                                <strong class="text-success">@(((decimal)product.Price).ToString("N0"))₫</strong>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            index++;
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal để thêm danh mục mới -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Thêm Danh Mục Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addCategoryForm" method="post" action="@Url.Action("AddCategory", "Admin")">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Tên Danh Mục</label>
                        <input type="text" class="form-control" id="categoryName" name="categoryName" required>
                    </div>
                    <div id="errorMessage" class="text-danger" style="display: none;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Biểu đồ phân bố theo loại
    const ctx = document.getElementById('categoryChart').getContext('2d');
    const categoryChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(ViewBag.CategoryLabels ?? "[]"),
            datasets: [{
                data: @Html.Raw(ViewBag.CategoryValues ?? "[]"),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 205, 86, 0.8)',
                    'rgba(75, 192, 192, 0.8)',
                    'rgba(153, 102, 255, 0.8)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 205, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
</script>

<style>
    .accordion-button:not(.collapsed) {
        background-color: #e7f3ff;
        color: #0d6efd;
    }

    .card-title {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .card-text.small {
        font-size: 0.8rem;
        line-height: 1.2;
    }

    .card:hover {
        transform: scale(1.02);
        transition: transform 0.2s ease-in-out;
    }
</style>