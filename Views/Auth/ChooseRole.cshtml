@{
    ViewData["Title"] = "Chọn vai trò";
}

<div class="container my-5">
    <h2 class="text-center mb-4" style="color: var(--primary-color);">Chọn vai trò đăng nhập</h2>
    <div class="card shadow-sm mx-auto" style="max-width: 400px; background: var(--secondary-color); border-radius: 15px;">
        <div class="card-body text-center">
            <form asp-action="ChooseRole" asp-controller="Auth" method="post">
                <div class="mb-3">
                    <button type="submit" name="role" value="user" class="btn w-100 mb-2" style="background: var(--gradient-primary); color: white; border-radius: 10px;">Đăng nhập User</button>
                </div>
                <div class="mb-3">
                    <button type="submit" name="role" value="admin" class="btn w-100 mb-2" style="background: var(--gradient-primary); color: white; border-radius: 10px;">Đăng nhập Admin</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}